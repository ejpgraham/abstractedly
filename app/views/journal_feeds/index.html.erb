<html>
<head></head>
<body class="vsc-initialized">
  <main role="main" class="container">
    <div class="row row-offcanvas row-offcanvas-right">
      <div class="col-12 col-md-9 container">
          <% @journal_feeds.each do |journal_feed| %>
            <% journal_feed.journals.each do |journal| %>
              <%= content_tag(:button, journal_title_and_date(journal), class: "btn btn-primary", type: "button", data: {toggle: "collapse", target: "#" + journal_title_and_date(journal).gsub(" ", "")}) %>
              <% if current_user.email == "ejpgraham@gmail.com" %>
                <%= link_to "Delete", journal, method: :delete %>
              <% end %>
              <%= content_tag(:div, class: "journal-container collapse", id: journal_title_and_date(journal).gsub(" ", "")) do %>
                <h1 class="journal-title"><%= journal.title %></h1>
                <h2 class="journal-date">Issue: <%= journal.date %></h2>
                <% journal.abstracts.each do |abstract| %>
                <div class="abstract-container">
                  <br>
                  <h4> <%= link_to abstract.title, abstract.url %> </h4>
                  <br>
                  <div> <strong>Authors:</strong>  <%= abstract.authors %></div>
                  <br>
                  <div> <%= abstract.body.html_safe %> </div>
                  <br>
                  <ul class="keyword-list">
                   <strong>Keywords:</strong>
                    <% abstract.keywords.each do |keyword| %>
                    <span class="badge badge-warning"><li class="keyword-list-item"> <%= link_to keyword.body, keyword_path(keyword)%></li></span>
                    <% end %>
                    <div class="custom-keywords">
                    </div>
                  </ul>
                  <br>
                </div>
                <% end %>
              <% end %>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </main>
</body>
